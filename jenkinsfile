pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    sh 'sudo chmod +x ./gradlew'
                    sh './gradlew dependencies'
                    sh './gradlew build --stacktrace'
                    sh './gradlew test'
                    sh 'rm -rf build'
                }
            }
        }
    }
}
