pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    sh 'sudo ./gradlew dependencies'
                    sh 'sudo ./gradlew build --stacktrace'
                    sh 'sudo ./gradlew test'
                }
            }
            steps {
                script {
                    sh 'rm -rf build'
                }
            }
        }
    }
}
